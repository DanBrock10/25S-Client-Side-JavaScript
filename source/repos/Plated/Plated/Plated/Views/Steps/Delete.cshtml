@model Plated.Models.Step

@{
    ViewData["Title"] = "Delete Step";
}

<h1>Delete Step</h1>
<hr />
<h4>Are you sure you want to delete this step?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StepOrder)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StepOrder)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt class="col-sm-2">
            Recipe
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Title)
        </dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="StepId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-dark">Cancel</a>
</form>

